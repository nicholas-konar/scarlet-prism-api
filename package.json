{
    "name": "ScarletPrism",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Nicholas Konar",
    "license": "none",
    "private": true,
    "scripts": {
        "dev": "docker compose up --build",
        "dev:inside": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
        "infra:up": "docker compose up -d",
        "infra:down": "docker compose down",
        "infra:kill": "docker compose down -v --remove-orphans",
        "infra:logs": "docker compose logs -f",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:changed": "jest --watchAll=false --onlyChanged",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "build": "tsc",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@koa/cors": "^5.0.0",
        "@koa/router": "^13.1.1",
        "@prisma/client": "^6.14.0",
        "dotenv": "^17.0.1",
        "eventsource-parser": "^3.0.3",
        "jsonwebtoken": "^9.0.2",
        "koa": "^3.0.0",
        "koa-bodyparser": "^4.4.1",
        "openai": "^5.8.2",
        "pino": "^9.7.0",
        "redis": "^5.6.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@swc/core": "^1.15.1",
        "@swc/jest": "^0.2.39",
        "@types/dotenv": "^8.2.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/koa": "^3.0.1",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa__cors": "^5.0.0",
        "@types/koa__router": "^12.0.4",
        "@types/node": "20",
        "@types/pino": "^7.0.5",
        "@types/redis": "^4.0.11",
        "jest": "^30.2.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.6.2",
        "prisma": "^6.14.0",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.6",
        "typescript": "^5.8.3"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"

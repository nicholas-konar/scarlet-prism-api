{
    "name": "ScarletPrism",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Nicholas Konar",
    "license": "none",
    "private": true,
    "scripts": {
        "dev": "docker compose up --build",
        "dev:inside": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
        "infra:up": "docker compose up -d",
        "infra:down": "docker compose down",
        "infra:kill": "docker compose down -v --remove-orphans",
        "infra:logs": "docker compose logs -f",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "build": "tsc",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@koa/cors": "^5.0.0",
        "@koa/router": "^13.1.1",
        "@prisma/client": "^6.14.0",
        "dotenv": "^17.0.1",
        "eventsource-parser": "^3.0.3",
        "koa": "^3.0.0",
        "koa-bodyparser": "^4.4.1",
        "openai": "^5.8.2",
        "pino": "^9.7.0",
        "redis": "^5.6.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.3",
        "@types/koa": "^2.15.0",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-cors": "^0.0.6",
        "@types/koa__cors": "^5.0.0",
        "@types/koa__router": "^12.0.4",
        "@types/node": "^24.0.10",
        "@types/pino": "^7.0.5",
        "@types/redis": "^4.0.11",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.6.2",
        "prisma": "^6.14.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    }
}

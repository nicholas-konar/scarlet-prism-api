// ./prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // avoids pg extensions
  email     String   @unique
  username      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
